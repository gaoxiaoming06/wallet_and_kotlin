<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout --><!--android:layout_width="300dp"--><!--android:layout_height="match_parent"--><!--android:layout_gravity="center"--><!--android:clickable="true"--><!--android:orientation="vertical"--><!--android:padding="16dp">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_dialog_title"
        android:gravity="center"
        android:text="标题"
        android:textColor="#fff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xl_white"
        android:gravity="center">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="120.0dip"
            android:padding="16dp"
            android:text="400-123-1234"
            android:textColor="@color/xl_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/negativeButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_home_dialog"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/xl_gray_headline"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>


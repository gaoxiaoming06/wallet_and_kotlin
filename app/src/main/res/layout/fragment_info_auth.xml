<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xl_gray_background"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/xl_white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="现居城市"
            android:textColor="@color/xl_gray_headline"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_city"
            style="?android:attr/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_jiantou_right"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:hint="请选择您的所在城市"
            android:lines="2"
            android:textColor="@color/xl_gray_headline"
            android:textColorHint="@color/xl_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/xl_white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:textColor="@color/xl_gray_headline"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_address"
            style="?android:attr/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="如：朝阳区潘家园"
            android:lines="2"
            android:textColor="@color/xl_gray_headline"
            android:textColorHint="@color/xl_gray"
            android:textCursorDrawable="@drawable/shape_edittext_cursor_drawable"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xl_gray_fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/xl_white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="居住时间"
            android:textColor="@color/xl_gray_headline"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_live_time"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:cursorVisible="false"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_jiantou_down"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:hint="请选择"
            android:textColor="@color/xl_gray_headline"
            android:textColorHint="@color/xl_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xl_gray_fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/xl_white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="工作信息"
            android:textColor="@color/xl_gray_headline"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_work_info"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:cursorVisible="false"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_jiantou_right"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:hint="未填写"
            android:textColor="@color/xl_gray_headline"
            android:textColorHint="@color/xl_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xl_gray_fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/xl_white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="紧急联系人"
            android:textColor="@color/xl_gray_headline"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_urgent_contact"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:cursorVisible="false"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_jiantou_right"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:hint="未填写"
            android:textColor="@color/xl_gray_headline"
            android:textColorHint="@color/xl_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pic_bottom_shadow" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_btn_auth"
        android:enabled="false"
        android:text="立即认证"
        android:textColor="@drawable/selector_btn_text_white"
        android:textSize="18sp" />
</LinearLayout>

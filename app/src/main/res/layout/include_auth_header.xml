<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_toIdAuth"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_auth">

            <ImageView
                android:id="@+id/iv_sfz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:src="@drawable/rz_icon_sfz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_sfz"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="身份认证"
                android:textColor="@color/xl_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_toPhoneAuth"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_auth">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:src="@drawable/rz_icon_mob" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_phone"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp"
                android:text="手机认证"
                android:textColor="@color/xl_gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_toInfoAuth"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_auth">

            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:src="@drawable/rz_icon_my" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_info"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="个人信息"
                android:textColor="@color/xl_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_toBankCardAuth"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/selector_item_auth"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:src="@drawable/rz_icon_card" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_card"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="银行卡认证"
                android:textColor="@color/xl_gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>